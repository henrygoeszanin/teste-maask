# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/teste_maask

# Security - Argon2
PEPPER="your_secure_pepper_here_min_32_chars"
PEPPER_VERSION=1
ARGON2_MEMORY_COST=15360
ARGON2_TIME_COST=2
ARGON2_PARALLELISM=1

# JWT Authentication
JWT_SECRET="your_jwt_secret_here_min_32_chars"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_here_min_32_chars"
JWT_ACCESS_EXPIRES_IN=900
JWT_REFRESH_EXPIRES_IN=2592000

# S3 Configuration
S3_ENDPOINT="https://s3.sa-east-1.amazonaws.com"
S3_REGION="sa-east-1"
S3_ACCESS_KEY_ID="your_access_key_id"
S3_SECRET_ACCESS_KEY="your_secret_access_key"
S3_BUCKET="maask-profiles"
S3_FORCE_PATH_STYLE="false"
